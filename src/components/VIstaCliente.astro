---

import { actions } from 'astro:actions';


interface Cliente {
	id?: number;
	id_cliente?: number | string;
	nombre_empresa?: string | null;
	segmento_anterior?: string | null;
	segmento_actual?: string | null;
	score_numerico_actual?: any;
	volumen_facturacion?: number | null;
	margen_total?: number | null;
	recency?: number | null;
	frecuencia?: number | null;
	segmento_numerico?: any;
}


const { data } = await Astro.callAction(actions.getClienteById, { id_cliente: Astro.props.id_cliente });

---
<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 to-green-100">
	<div class="w-full max-w-xl bg-white rounded-2xl shadow-xl p-8">
		<h2 class="text-3xl font-extrabold text-center text-blue-700 mb-6">Datos del Cliente</h2>
		<div class="mt-8 p-4 bg-gray-900 rounded-xl text-green-300 text-xs overflow-x-auto">
			<pre>{JSON.stringify(data, null, 2)}</pre>
		</div>
	</div>
</section>
